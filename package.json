{
  "name": "company-starter",
  "version": "0.0.1",
  "description": "An awesome starter for Full Stack JS companies",
  "scripts": {
    "build:packages": "lerna run build",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "prepublish": "npm run build:packages",
    "publish": "lerna publish",
    "new-version": "lerna version --force-publish",
    "test:packages": "lerna run --parallel test",
    "test:packages:ci": "lerna run --parallel --no-bail test:ci",
    "test:packages:cov": "lerna run --parallel test:cov",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@company-starter/base-config": "file:packages/base-config",
    "@company-starter/eslint-config": "file:packages/eslint-config",
    "@company-starter/husky-config": "file:packages/husky-config",
    "@company-starter/jest-config": "file:packages/jest-config",
    "@company-starter/ts-config": "file:packages/ts-config",
    "lerna": "3.20.2",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "supertest": "4.0.2",
    "@types/jest": "25.2.0",
    "@types/node": "13.9.1",
    "@types/supertest": "2.0.8",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "author": "company-starter",
  "license": "MY_COMPANY_LICENCE",
  "private": true,
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "preset": "@company-starter/jest-config/lib",
    "rootDir": "test",
    "coverageDirectory": "../coverage"
  }
}
